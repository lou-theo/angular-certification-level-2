{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es5",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2016", "dom"],
        "paths": {
            "@app/*": ["app/*"],
            "@environment/*": ["environments/*"]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictTemplates": true
    }
}
